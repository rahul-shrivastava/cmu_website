<%= form_for (@review )  do |f| %>

    <div class="field">
      <%= f.label :reviewer %>
      <br/>
      <%= f.text_field :reviewer %>
    </div>
    <div class="field">
      <%= f.label :review %>
      <br/>
      <%= f.text_area :review %>
    </div>
    <div class="field">
      <%= f.label :recommend %>
      <br/>
      <%= f.check_box :recommend %>
    </div>
    <div class="field" hidden="true">
      <%= f.label :book_id %>
      <br/>
      <%= f.text_field :book_id %>
    </div>
    <div class="field">
      <%= f.label :review_helpful %>
      <br/>
